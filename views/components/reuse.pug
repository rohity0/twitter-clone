mixin createpostForm(userName)
     .postformContainer 
        .userImageContainer 
           img(src=userName.profile, alt="profilc")
        .textContainer 
            textarea#postText(placeholder="What's happening?")
            .buttonCotainer 
               button#submitPost(disabled="") Post

mixin createReplyModal(userName)
     .modal.fade#replyModal(tabindex='-1',role='dialog', aria-labelledby='replyModalLabel', aria-hidden='false')
        .modal-dialog(role='document')
            .modal-content
               .modal-header
                  h5#replyModalLabel.modal-title Reply
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                     span(aria-hidden='false') &times;
               .modal-body
                  .originalPostContainer
                  .postformContainer 
                     .userImageContainer 
                        img(src=userName.profile || "", alt="profilc")
                     .textContainer 
                           textarea#replyText(placeholder="What's happening?")
               .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                  button#sumbitReplyButton.btn.btn-primary(type='button' disabled="") Reply    

mixin createDeletePostModal()
     .modal.fade#deletePostModal(tabindex='-1',role='dialog', aria-labelledby='deletePostModalLabel', aria-hidden='false')
        .modal-dialog(role='document')
            .modal-content
               .modal-header
                  h5#deletePostModalLabel.modal-title Delete the post?
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                     span(aria-hidden='false') &times;
               .modal-body
                 .originalPostContainer 
               .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                  button#deletePostButton.btn.btn-primary(type='button') Delete                  

mixin createPostModals(userName)
     +createReplyModal(userName)
     +createDeletePostModal()

mixin createFollowButton(user, isFollowing)
         - text = isFollowing ? "Following" : "Follow"
         - buttonClass = isFollowing? "followButton following" : "follow"
         button(class = buttonClass, data-user = user._id) #{text}